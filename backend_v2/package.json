{
    "name": "pos-enterprise-backend",
    "version": "2.0.0",
    "description": "Enterprise Multi-Branch POS Backend with PostgreSQL, Redis & Socket.IO",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "setup": "node setup.js",
        "cluster": "pm2 start ecosystem.config.cjs",
        "stop": "pm2 stop ecosystem.config.cjs",
        "restart": "pm2 restart ecosystem.config.cjs",
        "reload": "pm2 reload ecosystem.config.cjs",
        "delete": "pm2 delete ecosystem.config.cjs",
        "logs": "pm2 logs",
        "monit": "pm2 monit",
        "status": "pm2 status",
        "db:migrate": "node src/database/migrations/run.js",
        "db:seed": "node src/database/seeds/run.js",
        "db:backup": "pg_dump -U pos_user -F c pos_enterprise > backup_$(date +%Y%m%d_%H%M%S).dump",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.js"
    },
    "keywords": [
        "pos",
        "postgresql",
        "redis",
        "socket.io",
        "multi-branch",
        "enterprise"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "pg-pool": "^3.6.1",
        "redis": "^4.6.11",
        "socket.io": "^4.7.2",
        "socket.io-redis": "^6.1.1",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "morgan": "^1.10.0",
        "uuid": "^9.0.1",
        "joi": "^17.11.0",
        "node-cron": "^3.0.3",
        "bull": "^4.12.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "pm2": "^5.3.0",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}